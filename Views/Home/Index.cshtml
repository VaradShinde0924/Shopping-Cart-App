<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Column: Categories -->
        <div class="col-3">
            <ul class="list-group">
                <li class="list-group-item active">All Products</li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Deals of the Day" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Deals of the Day" })">Deals of the Day</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Electronics" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Electronics" })">Electronics</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Sports and Health" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Sports and Health" })">Sports and Health</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Babies and Toys" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Babies and Toys" })">Babies and Toys</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Groceries" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Groceries" })">Groceries</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Home and Lifestyle" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Home and Lifestyle" })">Home and Lifestyle</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Women’s Fashion" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Women’s Fashion" })">Women’s Fashion</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Men’s Fashion" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Men’s Fashion" })">Men’s Fashion</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Watches" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Watches" })">Watches</a>
                </li>
                <li class="list-group-item @Html.Raw(Request.QueryString["category"] == "Automobiles" ? "active" : "")">
                    <a href="@Url.Action("Index", "Products", new { category = "Automobiles" })">Automobiles</a>
                </li>
            </ul>
        </div>

        <!-- Center Column: Image -->
        <div id="customImageCarousel" class="carousel slide col-6" data-ride="carousel" data-interval="3000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/ShoppingHome - Copy1.png" class="d-block w-100 img-fluid" alt="Main Image 1" style="width: 100%; height: 100%; object-fit: contain;">
                </div>
                @*<div class="carousel-item">
                        <img src="~/Images/ShoppingHome - Copy14.png" class="d-block w-100 img-fluid" alt="Main Image 2" style="width: 100%; height: 100%; object-fit: contain;">
                    </div>*@
                <div class="carousel-item">
                    <img src="~/Images/ShoppingHome - Copy15.jpg" class="d-block w-100 img-fluid" alt="Main Image 3" style="width: 100%; height: 100%; object-fit: contain;">
                </div>
            </div>

            <!-- Optional navigation controls -->
            <a class="carousel-control-prev" href="#customImageCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#customImageCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


        <!-- Right Column: Vertical Images -->
        <div class="col-3">
            <div class="mb-3">
                <img src="~/Images/ShoppingHome - Copy2.png" class="img-fluid" alt="Photo 1" style="width: 100%; height: 100%; object-fit: cover;"
                     onclick="location.href='@Url.Action("ProductsByCategory", "Products", new { category = "Electronics" })'">
            </div>
            <div class="mb-3">
                <img src="~/Images/ShoppingHome - Copy16.png" class="img-fluid" alt="Photo 2" style="width: 100%; height: 100%; object-fit: cover;"
                     onclick="location.href='@Url.Action("ProductsByCategory", "Products", new { category = "Groceries" })'" />
            </div>
            <div class="mb-3">
                <img src="~/Images/ShoppingHome - Copy3.png" class="img-fluid" alt="Photo 3" style="width: 100%; height: 100%; object-fit: cover;"
                     onclick="window.location.href='@Url.Action("ProductsByCategory", "Products", new { category = "Men's Fashion" })'" />
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col">
            <img src="~/Images/ShoppingHome - Copy5.png" class="img-fluid hover-effect" alt="Photo 1" onclick="redirectToView(1)">
        </div>
        <div class="col">
            <img src="~/Images/ShoppingHome - Copy6.png" class="img-fluid hover-effect" alt="Photo 2" onclick="redirectToView(2)">
        </div>
        <div class="col">
            <img src="~/Images/ShoppingHome - Copy7.png" class="img-fluid hover-effect" alt="Photo 3" onclick="redirectToView(3)">
        </div>
        <div class="col">
            <img src="~/Images/ShoppingHome - Copy8.png" class="img-fluid hover-effect" alt="Photo 4" onclick="redirectToView(4)">
        </div>
        <div class="col">
            <img src="~/Images/ShoppingHome - Copy9.png" class="img-fluid hover-effect" alt="Photo 5" onclick="redirectToView(5)">
        </div>
    </div>
</div>

<script>
    function redirectToView(viewNumber) {
        window.location.href = '@Url.Action("Index", "Products")';
    }
</script>

<style>
    .hover-effect {
        transition: transform 0.3s ease;
    }

        .hover-effect:hover {
            transform: scale(1.1);
        }
</style>





